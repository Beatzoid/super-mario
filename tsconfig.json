{
    "compilerOptions": {
        "target": "es2015",
        "module": "es2015",
        "lib": ["dom", "ES2016"],
        "outDir": "./public/dist",

        "strict": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,

        "sourceMap": true,
        "moduleResolution": "node",
        "declaration": true
    },

    "include": ["**/*.ts"],
    "exclude": ["node_modules", "./public/dist"]
}
